<h2>Update your moment?</h2>
<div class="update-form">

	<form method="POST" action="/posts/<%= @post.id %>/update">
		<div class="post-title">
			<label for="title">Title: </label>
			<input type="text" name="title" value="<%= @post.title %>" placeholder="<%= @post.title %>">
		</div>
		<div class="post-content">
			<label for="content">Post Content: </label>
			<textarea name="content" maxlength="150" placeholder="<%= @post.content %>"><%= @post.content %></textarea>
		</div>	
		<div class="post-tags">
			<label for="tags">Tags: </label>
			<select multiple name="tags[]">
	             <option value="positive">Positive</option>
	             <option value="negative">Negative</option>
	             <option value="neutral">Neutral</option>
	             <option value="other">Other</option>
	        </select>

	        <!-- get the selected tags to already be selected for the user when they come to edit their post -->
		</div>		
			<input type="submit" value="Update Moment">
	</form>
</div>