<h2>Update your moment?</h2>

<form method="POST" action="/users/<%= @user.id %>/posts/update">
	<div>
		<label for="title">Title: </label>
		<input type="text" name="title" value="<%= @post.title %>" placeholder="<%= @post.title %>">
	</div>
	<div>
		<label for="content">Post Content: </label>
		<input name="content" maxlength="150" value="<%= @post.content %>" placeholder="<%= @post.content %>">
	</div>	

	<div>
		<label for="tags">Tags: </label>
		<input type="text" name="tags">
		This feature currently unavailable.
	</div>	
		<input type="submit" value="Update Moment">
</form>